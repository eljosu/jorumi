{
  "name": "@jorumi/server",
  "version": "1.0.0",
  "description": "JORUMI Authoritative Game Server",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "test": "jest",
    "balance:examples": "tsx balance/examples.ts",
    "balance:example1": "tsx -e \"import('./balance/examples').then(m => m.example1_BasicSimulation())\"",
    "balance:example2": "tsx -e \"import('./balance/examples').then(m => m.example2_BalanceAnalysis())\"",
    "balance:example3": "tsx -e \"import('./balance/examples').then(m => m.example3_AutoTuning())\"",
    "balance:example4": "tsx -e \"import('./balance/examples').then(m => m.example4_CompareConfigs())\"",
    "balance:example5": "tsx -e \"import('./balance/examples').then(m => m.example5_CompleteWorkflow())\""
  },
  "dependencies": {
    "socket.io": "^4.7.2",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "nanoid": "^5.0.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "typescript": "^5.3.3",
    "tsx": "^4.7.0"
  }
}

